# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/booking-app

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production
JWT_SECRET=your-secret-key-change-this-in-production

# JWT Token Expiry (default: 30 days)
JWT_EXPIRE=30d

# CORS Configuration
# Comma-separated list of allowed frontend origins
# Example: https://your-admin.vercel.app,https://your-admin.netlify.app
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Seed Script Secret (for production seeding via API)
# IMPORTANT: Change this to a secure random string in production
SEED_SECRET=change-this-secret-in-production
